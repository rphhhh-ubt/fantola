# Test Environment Configuration

# Node environment
NODE_ENV=test

# Logging
LOG_LEVEL=error
ENABLE_METRICS=false

# Redis Configuration (use mock in tests)
REDIS_HOST=localhost
REDIS_PORT=6379

# Database Configuration (use mock in tests)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=monorepo_test
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# JWT/Authentication
JWT_SECRET=test-jwt-secret-change-in-production

# Telegram Bot Configuration (use test token)
TELEGRAM_BOT_TOKEN=test-telegram-bot-token

# Storage Configuration
STORAGE_TYPE=local
STORAGE_BASE_URL=http://localhost/static
STORAGE_LOCAL_PATH=/tmp/storage

# Worker Configuration
WORKER_CONCURRENCY=1
WORKER_REPLICAS=1
WORKER_MAX_JOBS_PER_WORKER=10

# Sentry (disabled in tests)
SENTRY_ENABLED=false
