{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.worker"
  },
  "deploy": {
    "startCommand": "node services/worker/dist/index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "numReplicas": 3
  },
  "services": {
    "worker": {
      "name": "Worker Service",
      "runtime": "nodejs",
      "env": {
        "NODE_ENV": "production",
        "WORKER_CONCURRENCY": "10"
      }
    }
  }
}
