{
  "name": "monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "A pnpm-based TypeScript monorepo for services and shared packages",
  "scripts": {
    "build": "pnpm -r --stream build",
    "dev": "pnpm -r --parallel --stream dev",
    "lint": "pnpm -r --stream lint",
    "typecheck": "pnpm -r --stream typecheck",
    "clean": "pnpm -r --stream clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:services": "pnpm -r --filter './services/*' test",
    "test:packages": "pnpm -r --filter './packages/*' test",
    "bot:dev": "pnpm --filter bot dev",
    "api:dev": "pnpm --filter api dev",
    "worker:dev": "pnpm --filter worker dev"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^30.2.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.2"
  }
}
